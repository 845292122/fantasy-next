generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id            Int            @id @default(autoincrement()) // 主键
  email         String?        @db.VarChar(255) // 邮箱
  phone         String?        @db.VarChar(20) // 手机号
  passwordHash  String?        @db.VarChar(1000) // 密码
  role          Int            @default(2) @db.TinyInt // 角色 1: 管理员 2: 普通用户
  avatar        String?        @db.VarChar(1000) //头像
  isActive      Boolean?       @default(true) @db.TinyInt // 状态
  lastLoginAt   DateTime?      @db.Timestamp() //最后登录日期
  createdAt     DateTime       @default(dbgenerated("NOW()")) @db.Timestamp //创建时间
  updatedAt     DateTime       @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.Timestamp //最后更新时间
  profile       Profile?
  sessions      Session[]
  oauthAccounts OAuthAccount[]

  @@index([phone, role, isActive])
  @@map("auth_user")
}

model Profile {
  id         Int      @id @default(autoincrement()) // 主键
  contact    String?  @db.VarChar(100) //联系人
  shopName   String?  @db.VarChar(50) //店铺名称
  creditCode String?  @db.VarChar(50) //统一社会信用代码
  address    String?  @db.VarChar(255) //地址
  domain     String?  @db.VarChar(255) //域名
  remark     String?  @db.VarChar(500) //备注
  isActive   Boolean  @default(false) @db.TinyInt // 状态
  createdAt  DateTime @default(dbgenerated("NOW()")) @db.Timestamp //创建时间
  updatedAt  DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @db.Timestamp //最后更新时间
  user       User     @relation(fields: [userId], references: [id])
  userId     Int      @unique

  @@index([contact, shopName, isActive])
  @@map("auth_profile")
}

// NextAuth Session
model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique @db.VarChar(255)
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("nextauth_session")
}

// OAuth 第三方账户关联
model OAuthAccount {
  id                String  @id @default(cuid())
  userId            Int
  type              String  @db.VarChar(50)
  provider          String  @db.VarChar(50)
  providerAccountId String  @db.VarChar(255)
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String? @db.VarChar(50)
  scope             String? @db.VarChar(255)
  id_token          String? @db.VarChar(1000)
  session_state     String? @db.VarChar(255)
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("nextauth_oauth_account")
}

// NextAuth VerificationToken
model VerificationToken {
  identifier String   @db.VarChar(255)
  token      String   @unique @db.VarChar(255)
  expires    DateTime

  @@map("nextauth_verification_token")
}
